@import "nib"
@import "./card/styles.styl"

test(color=red)
	border 1px solid color
	box-sizing border-box
	

body
	font-family	Arial
	font-size	16px
	margin 0
	
.Layout
	display flex
	padding .5em
	margin .5em
	test(brown)
	flex-direction column
	min-height 100vh
	height	500px
	>section
		margin .5em
	&-main
		display flex
		justify-content space-between
	&-status
		test(green)
	&-battle
		test(orange)
	&-phases
		test(purple)
	&-angonist
		test(aquamarine)
		display flex
		justify-content space-between
	&-player
		test(gray)
		display flex
		justify-content space-between
